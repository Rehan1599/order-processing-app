@{
    ViewData["Title"] = "Order Entry";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #a8c0ff, #3f2b96);
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #fff;
            margin-top: 30px;
            font-size: 28px;
        }

        .form-container {
            max-width: 400px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.2); /* Semi-transparent background */
            padding: 20px;
            border-radius: 15px;
            backdrop-filter: blur(10px); /* Glass effect */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3); /* Light border to accentuate glass effect */
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #fff;
        }

        input[type="number"],
        select {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid rgba(255, 255, 255, 0.5);
            border-radius: 8px;
            font-size: 16px;
            color: #333;
            background-color: rgba(255, 255, 255, 0.5);
        }

            input[type="number"]:focus,
            select:focus {
                outline: none;
                border-color: #00bcd4;
            }

        button {
            width: 100%;
            padding: 12px;
            background-color: #00bcd4;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #0097a7;
            }

        .footer {
            text-align: center;
            margin-top: 40px;
            color: #fff;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <h2>Enter Order Details</h2>

    <div class="form-container">
        <form method="post" asp-action="ProcessOrder">
            <label for="orderAmount">Order Amount:</label>
            <input type="number" step="0.01" name="orderAmount" id="orderAmount" required />

            <label for="customerType">Customer Type:</label>
            <select name="customerType" id="customerType">
                <option value="New">New</option>
                <option value="Loyal">Loyal</option>
            </select>

            <button type="submit">Submit</button>
        </form>
    </div>

    <div class="footer">
        <p>&copy; 2025 Your Company Name</p>
    </div>

</body>
</html>
